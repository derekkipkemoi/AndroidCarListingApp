<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.profile.views.UserCarsFragment">

    <FrameLayout
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:visibility="invisible"
            android:id="@+id/postAd"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            app:cardCornerRadius="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:padding="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_baseline_add_circle_24"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Sell A Car"
                    style="@style/textStyleProfileCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="right"
                    android:layout_marginLeft="40dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_forward_24"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
        <com.agrawalsuneet.dotsloader.loaders.PullInLoader
            android:visibility="invisible"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:pullin_bigCircleRadius="50dp"
            app:pullin_dotsRadius="8dp"
            app:pullin_useMultipleColors="true"
            app:pullin_colorsArray="@array/rainbow"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>